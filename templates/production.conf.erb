# magfest ubersystem config file

# this info is used by cherrypy to start its own internal webserver
path = "/<%= @ubersystem_url_prefix %>"
hostname = "<%= @hostname_to_use %>"

# url_root is used to generate public clickable links (example: in emails)
# if you are behind a proxy like apache, this should be the PUBLIC
# facing address and NOT the internal cherrypy server.
url_root = "http://<%= @hostname_to_use %>:<%= @socket_port %>"

[cherrypy]
path = "/<%= @ubersystem_url_prefix %>"  # work around a bug that makes us put this here.
server.socket_host = <%= @socket_host %>
server.socket_port = <%= @socket_port %>

[django]
[[DATABASES]]
[[[default]]]
HOST = "<%= @db_host %>"
NAME = "<%= @db_name %>"
USER = "<%= @db_user %>"
PASSWORD = "<%= @db_pass %>"
